{
  "name": "create-inferno-context",
  "version": "0.2.7",
  "description": "Polyfill for the proposed Inferno context API",
  "main": "dist/node/index.js",
	"browser": "dist/browser/index.js",
  "repository": "https://github.com/kurdin/create-inferno-context",
  "author": "Ski.com",
  "license": "MIT",
  "keywords": [
    "inferno",
    "context",
    "contextTypes",
    "polyfill",
    "ponyfill"
  ],
  "files": [
    "lib"
  ],
  "scripts": {
    "buildnode": "parcel build src/index.js -d dist/node --target node --no-cache",
		"buildbrowser": "parcel build src/index.js -d dist/browser --no-cache",
		"build": "npm run buildnode && npm run buildbrowser",
		"push": "npm publish --registry http://10.0.0.105:4873/",
		"all": "npm run build && npm run push",
    "test": "jest"
  },
  "dependencies": {
    "gud": "^1.0.0",
    "prop-types": "^15.6.2",
    "inferno": "^6.2.1"
  },
  "peerDependencies": {
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/preset-env": "^7.1.6",
    "babel-core": "^6.26.3",
    "babel-plugin-inferno": "^6.0.3",
    "babel-preset-flow": "^6.23.0"
  },
  "lint-staged": {
    "*.{js,md,json,js.flow,d.ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "verbose": true,
    "testURL": "http://localhost/"
  }
}
